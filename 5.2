import math

class Точка:
    def __init__(self, x, y):
        self.x = x
        self.y = y

    def __str__(self):
        return f"Точка({self.x}, {self.y})"

class Відрізок:
    def __init__(self, точка1, точка2):
        self.точка1 = точка1
        self.точка2 = точка2

    def довжина(self):
        return math.sqrt((self.точка2.x - self.точка1.x)**2 + (self.точка2.y - self.точка1.y)**2)

    def __str__(self):
        return f"Відрізок між {self.точка1} та {self.точка2}"

class Трикутник:
    def __init__(self, відрізок1, відрізок2, відрізок3):
        self.відрізок1 = відрізок1
        self.відрізок2 = відрізок2
        self.відрізок3 = відрізок3

    def периметр(self):
        return self.відрізок1.довжина() + self.відрізок2.довжина() + self.відрізок3.довжина()

    def __str__(self):
        return f"Трикутник зі сторонами:\n{self.відрізок1}\n{self.відрізок2}\n{self.відрізок3}"

точка_A = Точка(0, 0)
точка_B = Точка(3, 0)
точка_C = Точка(0, 4)

відрізок_AB = Відрізок(точка_A, точка_B)
відрізок_BC = Відрізок(точка_B, точка_C)
відрізок_CA = Відрізок(точка_C, точка_A)

трикутник_ABC = Трикутник(відрізок_AB, відрізок_BC, відрізок_CA)

print(трикутник_ABC)
print(f"Периметр трикутника: {трикутник_ABC.периметр()}")
