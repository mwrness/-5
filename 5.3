class Людина:
    def __init__(self, ім_я, вік):
        self.ім_я = ім_я
        self.вік = вік

    def змінити_ім_я(self, нове_ім_я):
        self.ім_я = нове_ім_я

    def __str__(self):
        return f"Людина: {self.ім_я}, Вік: {self.вік}"

class Студент(Людина):
    def __init__(self, ім_я, вік, внз):
        super().__init__(ім_я, вік)
        self.внз = внз
        self.список_оцінок = []

    def додати_оцінку(self, оцінка):
        self.список_оцінок.append(оцінка)

    def середня_оцінка(self):
        if not self.список_оцінок:
            return 0
        return sum(self.список_оцінок) / len(self.список_оцінок)

    def __str__(self):
        return f"Студент: {self.ім_я}, Вік: {self.вік}, ВНЗ: {self.внз}, Оцінки: {self.список_оцінок}"

людина = Людина("Іван", 25)
print(людина)

людина.змінити_ім_я("Петро")
print(людина)

студент = Студент("Олена", 20, "Київський університет")
студент.додати_оцінку(85)
студент.додати_оцінку(90)
студент.додати_оцінку(78)

print(студент)
print(f"Середня оцінка студента: {студент.середня_оцінка()}")
